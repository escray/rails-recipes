<h1><%= @event.name %></h1>
<h2>Step 3</h2>
<% if @registration.errors.any? %>
  <ul>
    <% @registration.errors.full_messages.each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %>
  </ul>
<% end %>
<%= simple_form_for @registration, url: update_step3_event_registration_path(@event, @registration) do |f| %>
  <%= f.input :website, as: :url %>
  <%= f.input :bio, as: :text, required: true %>
  <%= link_to "Previous", step2_event_registration_path(@event, @registration), class: "btn btn-primary" %>
  <%= f.button :submit, "Submit", class: "btn btn-primary" %>
<% end %>
